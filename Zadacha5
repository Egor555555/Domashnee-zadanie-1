#include <iostream>

int main(){
using namespace std;
setlocale(0, "");
cout << "Вычисление стоимости поездки на дачу.\n";
cout << "Введите исходные данные:\n";
float a, b, c, d;
cout << "Расстояние до дачи в одну сторону (км) -> ";
cin >> a;
cout << "Расход бензина (л на 100 км) -> ";
cin >> b;
cout << "Цена литра бензина (руб.) -> ";
cin >> c;
d = (b / 100) * (a * 2) * c;
cout << "Поездка на дачу обойдётся "<< d <<" " << "руб.";
return 0;
} 
